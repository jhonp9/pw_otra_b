generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id              Int       @id @default(autoincrement())
  nombre          String
  email           String    @unique
  password        String
  rol             String    // 'streamer' o 'espectador'
  monedas         Int       @default(100) 
  puntosXP        Int       @default(0)
  nivelEspectador Int       @default(1)
  
  // CAMBIO: configNiveles guardar√° un JSON string tipo {"2": 500, "3": 1500}
  configNiveles   String    @default("{}") 
  metaXp          Int       @default(1000) // Se mantiene como fallback o base lineal

  horasStream     Float     @default(0.0)
  nivelStreamer   Int       @default(1)
  
  streams         Stream[]
  regalosPropios  Regalo[]  
  transacciones   Transaccion[] @relation("Emisor")
  recibidos       Transaccion[] @relation("Receptor")
}

model Stream {
  id          Int       @id @default(autoincrement())
  titulo      String
  categoria   String
  estaEnVivo  Boolean   @default(false)
  inicio      DateTime?
  fin         DateTime?
  usuarioId   Int
  usuario     Usuario   @relation(fields: [usuarioId], references: [id])
  mensajes    Mensaje[] 
}

model Regalo {
  id          Int     @id @default(autoincrement())
  nombre      String
  icono       String
  costo       Int
  puntos      Int
  streamerId  Int?
  streamer    Usuario? @relation(fields: [streamerId], references: [id])
}

model Transaccion {
  id              Int      @id @default(autoincrement())
  usuarioId       Int      
  destinatarioId  Int?
  monto           Int
  tipo            String   
  detalle         String?
  fecha           DateTime @default(now())
  
  usuario         Usuario  @relation("Emisor", fields: [usuarioId], references: [id])
  destinatario    Usuario? @relation("Receptor", fields: [destinatarioId], references: [id])
}

model Mensaje {
  id            Int      @id @default(autoincrement())
  contenido     String
  usuarioId     Int
  usuarioNombre String
  nivelUsuario  Int
  rolUsuario    String
  streamId      Int
  stream        Stream   @relation(fields: [streamId], references: [id], onDelete: Cascade)
  fecha         DateTime @default(now())
}